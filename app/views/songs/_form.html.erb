<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <h3>UH OH</h3>
    <ul>
      <% @song.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :released %>
  <%= f.check_box :released, {}, true, false%>

  <%= f.label :release_year %>
  <%= f.text_field :release_year %>

  <%= f.label :artist_name%>
  <%= f.text_field :artist_name %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.submit%>
<% end %>