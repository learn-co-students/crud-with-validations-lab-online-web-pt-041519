
<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
    
      <h3><%= pluralize(@song.errors.count, "error") %> errors bro</h3>

      <ul>
        <% @song.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    
    </div>
  <% end %>

  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br> 

  <%= f.label :released %> <br>
  <%= f.check_box :released %> <br>

  <%= f.label :releaase_year %> <br>
  <%= f.text_field :release_year %> <br>

  <%= f.label :artist_name %> <br> 
  <%= f.text_field :artist_name %> <br>

  <%= f.label :genre %> <br>
  <%= f.text_field :genre %> <br>

  <%= f.submit %>
<% end %>