<h2>All Songs</h2>

<div><%= link_to 'New Song', new_song_path %></div><br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Artist Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.release_year %></td>
        <td><%= song.genre %></td>
        <td><%= song.artist_name %></td>
        <td>
          <%= link_to 'View', song_path(song) %>
          <%= link_to 'Edit', edit_song_path(song) %>
          <%= button_to 'Delete', song_path(song), method: :delete, data: { confirm: "Last chance to turn around... Are you sure you want to do this?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>



